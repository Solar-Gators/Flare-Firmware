{
  "version": 8,
  "cmakeMinimumRequired": { "major": 3, "minor": 22, "patch": 0 },

  "configurePresets": [
    {
      "name": "gcc-arm-none-eabi-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/resources/cmake/gcc-arm-none-eabi.cmake",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "GCC ARM Embedded (Debug)",
      "description": "Debug build with GCC ARM toolchain",
      "inherits": "gcc-arm-none-eabi-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "GCC ARM Embedded (Release)",
      "description": "Release build with GCC ARM toolchain",
      "inherits": "gcc-arm-none-eabi-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "gcc-arm-none-eabi-debug",
      "displayName": "Build (Debug)"
    },
    {
      "name": "release",
      "configurePreset": "gcc-arm-none-eabi-release",
      "displayName": "Build (Release)"
    }
  ]
}
